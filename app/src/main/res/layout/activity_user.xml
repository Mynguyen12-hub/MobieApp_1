<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FCE4EC">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <!-- Avatar + Viền tròn -->
        <ImageView
            android:id="@+id/imgAvatar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_user"
            android:scaleType="centerCrop"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/user" />

        <!-- Tên người dùng -->
        <TextView
            android:id="@+id/txtUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Michael"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- Thông tin điểm - coupon - ví -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="399 Integral"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Coupon: 2"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Wallet: 2.6"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Mã QR -->
        <ImageView
            android:id="@+id/imgQRCode"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/ic_qr_code"
            android:layout_marginBottom="24dp"
            android:scaleType="fitCenter" />

        <!-- Menu chức năng -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnMyOrder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="My Order"
                android:drawableStart="@drawable/ic_order"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/btnMyService"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="My Service"
                android:drawableStart="@drawable/ic_service"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/btnSettings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cài đặt"
                android:drawableStart="@drawable/ic_settings"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/btnLogout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đănng xuất"
                android:drawableStart="@drawable/ic_logout"
                android:backgroundTint="@android:color/holo_red_light"
                android:textColor="@android:color/white"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="24dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
