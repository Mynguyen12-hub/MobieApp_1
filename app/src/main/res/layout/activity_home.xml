<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FCE4EC">

    <!-- ScrollView Ä‘á»ƒ cuá»™n ná»™i dung -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="56dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- Thanh tÃ¬m kiáº¿m + giá» hÃ ng -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="8dp">

                <EditText
                    android:id="@+id/edtSearch"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:hint="TÃ¬m kiáº¿m hoa..."
                    android:drawableStart="@android:drawable/ic_menu_search"
                    android:paddingHorizontal="12dp"
                    android:background="@drawable/search_box_bg"
                    android:textColor="#000" />

                <!-- âœ… ThÃªm nÃºt tÃ¬m kiáº¿m -->
                <ImageView
                    android:id="@+id/btnSearch"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@android:drawable/ic_menu_search"
                    android:padding="8dp"
                    android:layout_marginStart="8dp" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp">

                    <ImageView
                        android:id="@+id/btnCart"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_cart"
                        android:padding="6dp" />

                    <TextView
                        android:id="@+id/tvCartCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@id/btnCart"
                        android:layout_alignEnd="@id/btnCart"
                        android:text="0"
                        android:textSize="11sp"
                        android:textColor="#FFF"
                        android:background="@drawable/circle_red"
                        android:padding="2dp"
                        android:minWidth="18dp"
                        android:gravity="center"
                        android:visibility="gone"/>
                </RelativeLayout>
            </LinearLayout>

            <!-- NgÆ°á»i dÃ¹ng -->
            <TextView
                android:id="@+id/tvAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ‘¤ NgÆ°á»i dÃ¹ng"
                android:textColor="#555555"
                android:textSize="14sp"
                android:paddingStart="6dp"
                android:paddingBottom="6dp" />

            <!-- Banner -->
            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPagerBanner"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginTop="8dp"
                android:clipToPadding="false"
                android:clipChildren="false"
                android:paddingStart="12dp"
                android:paddingEnd="12dp" />

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                app:tabIndicatorColor="#D81B60"
                app:tabSelectedTextColor="#D81B60"
                android:layout_marginBottom="12dp" />

            <!-- Danh má»¥c -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Danh má»¥c"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="12dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:padding="4dp"
                android:overScrollMode="never" />

            <!-- ðŸŽ MÃ£ giáº£m giÃ¡ -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸŽ MÃ£ giáº£m giÃ¡"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="12dp"
                android:paddingStart="4dp" />

            <LinearLayout
                android:id="@+id/layoutDiscounts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="6dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvDiscount5"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="-5%"
                    android:textStyle="bold"
                    android:textColor="#B71C1C"
                    android:background="@drawable/bg_discount"
                    android:layout_marginEnd="6dp" />

                <TextView
                    android:id="@+id/tvDiscount10"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="-10%"
                    android:textStyle="bold"
                    android:textColor="#1B5E20"
                    android:background="@drawable/bg_discount"
                    android:layout_marginEnd="6dp" />

                <TextView
                    android:id="@+id/tvDiscount25"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="-25%"
                    android:textStyle="bold"
                    android:textColor="#0D47A1"
                    android:background="@drawable/bg_discount" />
            </LinearLayout>

            <!-- âœ… NÃºt lÆ°u mÃ£ giáº£m giÃ¡ -->
            <Button
                android:id="@+id/btnSaveDiscount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LÆ°u mÃ£ giáº£m giÃ¡"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:backgroundTint="#D81B60"
                android:textColor="@android:color/white" />

            <!-- Sáº£n pháº©m má»›i -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sáº£n pháº©m má»›i"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="12dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvNewProduct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:scrollbars="horizontal"
                android:overScrollMode="never" />

            <!-- Sáº£n pháº©m ná»•i báº­t -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sáº£n pháº©m ná»•i báº­t"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="12dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvFeaturedProducts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:scrollbars="horizontal"
                android:overScrollMode="never" />
        </LinearLayout>
    </ScrollView>

    <!-- Thanh Ä‘iá»u hÆ°á»›ng dÆ°á»›i -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#FFFFFF"
        app:itemIconTint="@color/nav_item_color"
        app:itemTextColor="@color/nav_item_color"
        app:menu="@menu/bottom_nav_menu" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>
