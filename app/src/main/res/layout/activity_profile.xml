<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#FFF0F5"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="24dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_back"
                android:background="@drawable/rounded_back_button_bg"
                android:backgroundTint="#E91E63" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Trang cá nhân"
                android:textColor="#E91E63"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center" />

            <View
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:visibility="invisible" />
        </LinearLayout>

        <!-- Avatar -->
        <FrameLayout
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginTop="24dp">

            <ImageView
                android:id="@+id/imgAvatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_user"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/btnEditAvatar"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="bottom|end"
                android:layout_margin="4dp"
                android:src="@drawable/ic_edit"
                android:background="@drawable/rounded_pink_button" />
        </FrameLayout>

        <!-- QR Code -->
        <ImageView
            android:id="@+id/imgQRCode"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/ic_qr_code"
            android:layout_marginTop="16dp"
            android:scaleType="fitCenter" />

        <!-- Thông tin người dùng -->
        <TextView
            android:id="@+id/txtUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Admin"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginTop="12dp" />

        <TextView
            android:id="@+id/txtSkinType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Normal Skin"
            android:textColor="#E91E63"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <!-- Editable Fields -->
        <EditText android:id="@+id/edtFullName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Họ tên"
            android:layout_marginTop="8dp"
            android:backgroundTint="#E91E63"/>

        <EditText android:id="@+id/edtEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:layout_marginTop="4dp"
            android:backgroundTint="#E91E63"/>

        <EditText android:id="@+id/edtPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Số điện thoại"
            android:inputType="phone"
            android:layout_marginTop="4dp"
            android:backgroundTint="#E91E63"/>



        <EditText android:id="@+id/edtAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Địa chỉ"
            android:layout_marginTop="4dp"
            android:backgroundTint="#E91E63"/>

        <EditText android:id="@+id/edtSkinType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Loại da"
            android:inputType="text"
            android:layout_marginTop="4dp"
            android:backgroundTint="#E91E63"/>

        <!-- Nút cập nhật -->
        <Button
            android:id="@+id/btnUpdateProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cập nhật"
            android:layout_marginTop="12dp"
            android:textAllCaps="false"
            android:backgroundTint="#E91E63"
            android:textColor="#FFF" />

        <!-- Đăng xuất -->
        <Button
            android:id="@+id/btnSignOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đăng xuất"
            android:layout_marginTop="24dp"
            android:textColor="#E91E63"
            android:textAllCaps="false" />
    </LinearLayout>
</ScrollView>
